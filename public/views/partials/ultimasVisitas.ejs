<div class="container products-wrapper">
    <div class="row">
        <div class="col-12">
            <h2 class="products-title">Basado en tu Ãºltima visita</h2>
        </div>
        <% for (let i = 0; i < productos.length; i++) {
            if (productos[i].category == "visited"){ %>
        <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
                <a href="/products/detail/<%= productos[i].id %>">
                    <figure class="product-box_image">
                        <img src= "/images/<%= productos[i].image %>" alt="imagen de producto">
                    </figure>
                    <article class="product-box_data">
                        <% const toThousand = n =>n.toString().replace( /\B(?=(\d{3})+(?!\d))/g,"." ) ; %>
                        <h2>$<%= toThousand (productos[i].price) %></h2>
                        <span><% if (productos[i].discount != 0) {%>
                            <%= productos[i].discount %>% OFF
                            <% } %>
                        </span>
                        <p><%= productos[i].description %></p>
                        <i class="fas fa-truck"></i>
                    </article>
                </a>
            </section>
        </div>
        <% }
        } %>
    </div>
</div>